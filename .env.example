FMP_API_KEY=your_fmp_key_here
FMP_BASE_URL=https://financialmodelingprep.com/stable

OPENAI_API_KEY=your_openai_key_here

# Neo4j / Aura (for EarningsCallAgenticRag)
NEO4J_URI=neo4j+s://<your-neo4j-host>
NEO4J_USERNAME=<neo4j-username>
NEO4J_PASSWORD=<neo4j-password>
NEO4J_DATABASE=neo4j
AURA_INSTANCEID=<optional-instance-id>
AURA_INSTANCENAME=<optional-instance-name>

# Database (PostgreSQL via Zeabur)
# 在本地開發可以不設，預設會用 SQLite。
# 部署到 Zeabur 時，請把 Zeabur 提供的連線字串填到 POSTGRES_DSN。
POSTGRES_DSN=postgres://user:password@host:5432/database_name

# Analysis payload cache (DB + Redis)
# DB 快取有效分鐘數（對應 storage.get_cached_payload 的 max_age_minutes）
PAYLOAD_CACHE_MINUTES=1440

# Redis 連線字串（共用快取，用於加速 /api/analyze）
# 在 Zeabur 上可以直接使用 Redis 服務暴露的 REDIS_CONNECTION_STRING。
REDIS_CONNECTION_STRING=redis://default:password@host:6379/0
# 可選：若你偏好 REDIS_URL，也可以用這個，程式會優先讀 REDIS_URL。
# REDIS_URL=redis://default:password@host:6379/0

# Redis 中 payload 的 TTL（秒）
REDIS_PAYLOAD_TTL_SECONDS=3600
